@model IEnumerable<AtnWeb.Models.Shop>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>List Of Shops</h2>
<div class="row">
    <a class="btn btn-primary" asp-area="Authenticated" asp-controller="Shops" asp-action="Upsert">Create a Shop</a>
    <form method="get" asp-controller="Shops" asp-action="Index" >
        <input type="text" name="SearchString" class="form-control">
        <button type="submit" class="btn btn-primary form-control">Search</button>
    </form>
</div>

<br>
<br>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id #</th>
        <th>Shop Location</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Location</td>
            <td>
                <a asp-controller="Shops" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-default btn-info">Edit</a>
                <a href="/Authenticated/Shops/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
            
        </tr>
        
    }
    </tbody>
</table>
